<script type="text/template" id="tm3">
	<% for(var i = 0;i<data.length;i++){ %>
	<div class="g-media mg-t-10 pd-10  g-bg-success">
		<div class="g-media-head">
			<img src="" class="wh-64 radius-50perc" />
		</div>
		<div class="g-media-body">
			<h4 class="g-media-title">模板3-<%= data[i] %></h4>
			<p class="g-media-content">
				<%= data %>
			</p>
			<div class="g-media-other-msg">
				<time><%= new Date() %></time>
			</div>
		</div>
	</div>
	<% } %>
</script>
<script type="text/javascript">
	new Tmpl({
		el: "tm3",
		data: {
			i: 0
		},
		methods: {
			up: function() {
				console.log(this.i);	
				this.data([this.i++, this.i++, this.i++, this.i++])
					.appendTo(this.childrens(this.fn.getEl('tm-3'), 'content')[0]);
			}
		},
		mounted: function() {
			this.up();
		},
		events: function() {
			this.on('on-add-tm3', 'click', this.up);
		}
	});
</script>